<style>
  .blog-post-header-wrapper {
  }

  .blog-post-header {
  }

  .blog-img-wrapper {
    position: relative;
    border-radius: 0;
    width: 100%;
    height: 420px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .blog-img-wrapper img {
    border-radius: 0;
    object-fit: cover;
    vertical-align: middle;
    display: block;
    aspect-ratio: auto;
    overflow: hidden;
    height: 100%;
    width: 100%;
  }
  .blog-img-wrapper .overlay {
