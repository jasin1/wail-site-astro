    z-index: 2;
    color: white;
    font-size: 3rem;
    text-align: center;
    padding: 0 1rem;
  }

  .blog-post-content {
    padding: 4rem 0;
  }

  .blog-post-wrapper {
    margin: 0 auto;
    width: 100%;
    max-width: 48rem;
  }

  .blog-post p {
    margin-bottom: 1rem;
  }

  .blog-post ul {
    list-style: disc inside;
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .blog-post li {
    list-style-type: disc;
    list-style-position: inside;
    display: list-item;
    font-weight: bold;
  }

  .blog-post p a {
    font-weight: bold;
    color: var(--color-dark-highlight);
    cursor: pointer;
    transition: color 0.3s ease;
  }

    .blog-post p a:hover {
      color: var(--color-bg-dark-brown);
    }
</style>
