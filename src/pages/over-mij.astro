  <section>
    <div class="wrapper">
      <div class="padding-normal">
        <div class="img-wrapper max-h-800">
          <img src="/images/over-mij-second.jpg" alt="" />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .over-mij-section {
    background-color: var(--color-bg-light);
  }
  .over-mij-header {
    display: flex;
    gap: 2.5rem;
    flex-direction: row;
    padding: 4rem 0;
  }

  .over-mij-image-wrapper {
    object-fit: contain;
    height: 520px;
  }

  .over-mij-heading-wrapper {
    padding-top: 1.5rem;
  }

  .heading-style-h1-alt {
    font-size: 3.8rem;
    font-style: italic;
    font-weight: 600;
  }

  .sub-content-block {
    margin-bottom: 4rem;
  }

  .multi-column-text {
    column-count: 2;
    column-gap: 2rem;
  }

  .break-column {
    break-before: column;
  }
</style>
